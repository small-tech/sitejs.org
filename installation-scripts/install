#!/bin/bash

######################################################################
#
# Site.js v12.10.0 Installer for Linux (x86 and armv7l) and macOS.
#
# To use:
#
# wget -qO- https://sitejs.org/install | bash
#
# Copyright (c) 2019 Aral Balkan.
# Released under the AGPL version 3.0 or later license.
# Made with ‚ô• by Small Technology Foundation (https://small-tech.org)
# Like this? Fund us! (https://small-tech.org/fund-us)
#
######################################################################

set -e
echo
echo " üì° Downloading Site.js v12.10.0‚Ä¶"

function cleanUp {
  popd > /dev/null
  rm -rf /tmp/sitejs.org
}

# Setup
rm -rf /tmp/sitejs.org
mkdir -p /tmp/sitejs.org
pushd /tmp/sitejs.org > /dev/null

if [[ "$OSTYPE" == "linux-gnu" || "$OSTYPE" == "linux-gnueabihf" ]]; then
  cpuArchitecture=`uname -m`
  if [[ "$cpuArchitecture" == "x86_64" ]]; then
    # Linux on x64.
    wget -q https://sitejs.org/releases/linux/12.10.0.tar.gz
  elif [[ "$cpuArchitecture" == "armv7l" || "$cpuArchitecture" == "armv6l" ]]; then
    # Linux on ARM. Tested on Raspberry Pi Zero W (armv6l), 3B+ and 4B (both reporting armv7l).
    wget -q https://sitejs.org/releases/linux-arm/12.10.0.tar.gz
  else
    # Unsupported
    echo "\n ‚ùå Error: this architecture is not supported on Linux (only x86_64, armv6l, and armv7l are).\n"
    cleanUp
    exit 1
  fi
elif [[ "$OSTYPE" == "darwin"* ]]; then
  # macOS
  curl -Os https://sitejs.org/releases/macos/12.10.0.tar.gz
else
  # Unsupported
  echo "\n ‚ùå Error: this operating system is not supported.\n"
  cleanUp
  exit 1
fi

echo " üì¶ Installing‚Ä¶"
gzip -d 12.10.0.tar.gz
tar -xf 12.10.0.tar

# Ensure that the /usr/local/bin directory exists (it does not by default on macOS)
sudo mkdir -p /usr/local/bin/

# Move the site binary there.
sudo mv site /usr/local/bin/

cleanUp

echo " üéâ Done!"
echo
